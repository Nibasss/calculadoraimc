<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/vg_header_result"
        android:background="@drawable/gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/ic_monitor_weight"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:tint="@color/white" />

        <TextView
            android:text="Calculadora IMC"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Confirma em baixo seu resultado IMC e a classificação"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="46dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_result"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:text="24.55" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_marginTop="210dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua classificação IMC é:" />

    <TextView
        android:id="@+id/tv_classificacao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NORMAL" />

    <TextView
        android:text="Desenvolved by @nibasscript"
        android:textStyle="italic"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>